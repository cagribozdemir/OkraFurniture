@model Order
@{
    ViewData["Title"] = "UpdateOrder";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Sipariş Güncelle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Default/Index">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">Sipariş Güncelle</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <form method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Miktar</label>
                                <input type="text" asp-for="Amount" class="form-control">
                            </div>
                            <div class="form-group">
                                @Html.Label("Kategori Adı")
                                @Html.DropDownListFor(x => x.ProductId, (List<SelectListItem>)ViewBag.categoryVlc, new { @class = "form-control custom-select" })
                                @Html.ValidationMessageFor(x => x.ProductId)
                            </div>
                            <div class="form-group">
                                @Html.Label("Ürün Kodu")
                                @Html.DropDownListFor(x => x.ProductId, (List<SelectListItem>)ViewBag.productCodeVlc, new { @class = "form-control custom-select" })
                                @Html.ValidationMessageFor(x => x.ProductId)
                            </div>
                            <div class="form-group">
                                @Html.Label("Ürün Adı")
                                @Html.DropDownListFor(x => x.ProductId, (List<SelectListItem>)ViewBag.productVlc, new { @class = "form-control custom-select" })
                                @Html.ValidationMessageFor(x => x.ProductId)
                            </div>
                            <div class="form-group">
                                @Html.Label("Kumaş Tipi")
                                @Html.DropDownListFor(x => x.FabricId, (List<SelectListItem>)ViewBag.fabricVlc, new { @class = "form-control custom-select" })
                                @Html.ValidationMessageFor(x => x.FabricId)
                            </div>
                            <div class="form-group">
                                @Html.Label("Ürün Rengi")
                                @Html.DropDownListFor(x => x.ProductColorId, (List<SelectListItem>)ViewBag.productColorVlc, new { @class = "form-control custom-select" })
                                @Html.ValidationMessageFor(x => x.ProductColorId)
                            </div>
                            <div class="form-group">
                                @Html.Label("Ayak Rengi")
                                @Html.DropDownListFor(x => x.FootColorId, (List<SelectListItem>)ViewBag.footColorVlc, new { @class = "form-control custom-select" })
                                @Html.ValidationMessageFor(x => x.FootColorId)
                            </div>
                            <div class="form-group">
                                <label>İskonto</label>
                                <input type="text" asp-for="Discount" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Fiyat</label>
                                <input type="text" asp-for="Price" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a href="/Orders/GetAll" class="btn btn-secondary">İptal</a>
                    <button class="btn btn-success float-right">Güncelle</button>
                </div>
            </div>
        </form>
    </section>
</div>

