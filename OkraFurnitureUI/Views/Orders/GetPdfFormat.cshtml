                    <td class="column4 style15 s">ÜRÜN RENGİ / <br>PRODUCT COLOR</td>
                    <td class="column5 style15 s">AYAK RENGİ / <br>FOOT COLOR</td>
                    <td class="column6 style15 s">PARÇA SAYISI</td>
                    <td class="column7 style15 s">FİYAT / <br>PRICE</td>
                    <td class="column8 style60 s">TUTAR / <br>TOTAL</td>
                    <td class="column9">&nbsp;</td>
                </tr>
                @for (; count < 20; count++)
                {
                    var item = count < Model.Count ? Model[count] : null;
                    <tr class="row13">
                        @if (item != null && count != 19)
                        {
                            <td class="column0 style59 s">@item.Amount</td>
                            <td class="column1 style2 s">@item.ProductCode</td>
                            <td class="column2 style2 s">@item.ProductName</td>
                            <td class="column3 style2 s">@item.FabricName</td>
                            <td class="column4 style2 s">@item.ProductColorName</td>
                            <td class="column5 style2 s">@item.FootColorName</td>
                            <td class="column6 style2 s">@item.Piece</td>
                            <td class="column7 style2 s">₺@item.Price</td>
                            <td class="column8 style60 s">₺@item.TotalPrice</td>
                            <td class="column9">&nbsp;</td>
                        }
                        else if (item != null && count == 19)
                        {
                            <td class="column0 s style64">@item.Amount</td>
                            <td class="column1 s style65">@item.ProductCode</td>
                            <td class="column2 s style65">@item.ProductName</td>
                            <td class="column3 s style65">@item.FabricName</td>
                            <td class="column4 s style65">@item.ProductColorName</td>
                            <td class="column5 s style65">@item.FootColorName</td>
                            <td class="column6 s style65">@item.Piece</td>
                            <td class="column7 s style65">₺@item.Price</td>
                            <td class="column8 s style67">₺@item.TotalPrice</td>
                            <td class="column9">&nbsp;</td>
                        }
                        else if (item == null && count == 19)
                        {
                            <td class="column0 null style64"></td>
                            <td class="column1 null style65"></td>
                            <td class="column2 null style65"></td>
                            <td class="column3 null style65"></td>
                            <td class="column4 null style65"></td>
                            <td class="column5 null style65"></td>
                            <td class="column6 null style65"></td>
                            <td class="column7 null style65"></td>
                            <td class="column8 f style67">₺0.00</td>
                            <td class="column9">&nbsp;</td>
                        }
                        else
                        {
                            <td class="column0 style59 null"></td>
                            <td class="column1 style2 null"></td>
