                    <td class="column1 style20 null"></td>
                    <td class="column2 style20 null"></td>
                    <td class="column3 style21 null"></td>
                    <td class="column4 style21 null"></td>
                    <td class="column5 style21 null"></td>
                    <td class="column6 style21 null"></td>
                    <td class="column7 style73 s">KALAN BAKİYE</td>
                    <td class="column8 style74 null">₺@ViewBag.Balance</td>
                    <td class="column9 style9 null"></td>
                </tr>
            </tbody>
