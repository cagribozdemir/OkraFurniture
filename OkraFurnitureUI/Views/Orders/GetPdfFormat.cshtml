                            <td class="column3 style2 null"></td>
                            <td class="column4 style2 null"></td>
                            <td class="column5 style2 null"></td>
                            <td class="column6 style2 null"></td>
                            <td class="column7 style2 null"></td>
                            <td class="column8 style60 s">₺0.00</td>
