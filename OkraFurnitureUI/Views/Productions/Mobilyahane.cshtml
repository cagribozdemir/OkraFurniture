
@{
    ViewData["Title"] = "Mobilyahane";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mobilyahane</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Default/Index">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">Mobilyahane</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a href="/Orders/AddOrder/@ViewBag.ProformaId" class="btn btn-outline-primary">Sipariş Ekle</a>
                    </div>
                    <div style="display: flex; align-items: flex-start;">
                        <div class="card-body col-md-2" id="productTypes">
                        </div>
                        <div class="card-body col-md-10" id="tables">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Firma</th>
                                        <th>Model</th>
                                        <th>Kumaş</th>
                                        <th>Renk</th>
                                        <th>Adet</th>
                                        <th>Fitil</th>
                                        <th>Ayak Tipi ve Rengi</th>
                                        <th>Güncelle</th>
                                        <th>Tamamlandı</th>
                                    </tr>
                                </thead>
                                <tbody id="dataByProduct">
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>No</th>
                                        <th>Firma</th>
                                        <th>Model</th>
                                        <th>Kumaş</th>
                                        <th>Renk</th>
                                        <th>Adet</th>
                                        <th>Fitil</th>
                                        <th>Ayak Tipi ve Rengi</th>
                                        <th>Güncelle</th>
                                        <th>Tamamlandı</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $.getJSON(`/Products/GetProductsByCategoryName/Sandalye`, function (data) {
                var productTypes = $("#productTypes");

                $.each(data, function (index, product) {
                    productTypes.append('<a href="#" class="btn btn-primary" style="width:100%;" data-productId="' + product.id + '">' + product.name + '</a><br /><br />');

                });
            });

            $(document).on('click', '#productTypes .btn.btn-primary', function (e) {
                e.preventDefault();

                var productId = $(this).attr('data-productId');
                $.getJSON(`/Orders/GetByProductId/${productId}`, function (data) {
                    var tbody = $("#dataByProduct");
                    tbody.empty();

                    $.each(data, function (index, order) {
                        var row = '<tr>' +
                            '<td>' + (index + 1) + '</td>' +
                            '<td>' + order.companyName + '</td>' +
                            '<td>' + order.productName + '</td>' +
                            '<td>' + order.fabricName + '</td>' +
                            '<td>' + order.productColorName + '</td>' +
                            '<td>' + order.amount + '</td>' +
                            '<td>' + 25 + '</td>' + //burayı sor ve işle
                            '<td>' + order.footName + ' / ' + order.footColorName + '</td>' +
                            '<td><a href="/Orders/UpdateOrder/' + 1 + '" class="btn btn-outline-success">Güncelle</a></td>' +
                            '<td><a href="/Orders/DeleteOrder?id=' + 1 + '&&proformaId=' + 1 + '" class="btn btn-outline-danger">Tamamlandı</a></td>' +
                            '</tr>';
                        tbody.append(row);
                    });
                });
            });
        });
    </script>
}