@model Entity.DTOs.Proforma.CreateProformaDto
@{
    ViewData["Title"] = "AddProforma";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Proforma Oluştur</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Default/Index">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">Proforma Oluştur</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <form method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-sm-3">
                                    <label>Şirket Adı</label>
                                    <input type="text" asp-for="CompanyName" class="form-control">
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Adres</label>
                                    <input type="text" asp-for="Address" class="form-control">
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Açıklama</label>
                                    <input type="text" asp-for="Description" class="form-control">
                                </div>
                            </div>
                            <div class="card-header">
                                <a href="/Default/Index" class="btn btn-secondary">İptal</a>
                                <button class="btn btn-success float-right">Proformayı Oluştur</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>

