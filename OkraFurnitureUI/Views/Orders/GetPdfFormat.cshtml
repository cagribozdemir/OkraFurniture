                    <td class="column6 style44 s style46" colspan="3">@ViewBag.ProformaReceiptNo</td>
                    <td class="column9">&nbsp;</td>
                </tr>
                <tr class="row5">
                    <td class="column0 style43 null"></td>
                    <td class="column1 style43 null"></td>
                    <td class="column2 style27 s style27" colspan="4">TEL: 0542 542 93 88</td>
                    <td class="column6 style48 s style48" colspan="3">
